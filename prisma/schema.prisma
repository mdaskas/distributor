generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // Use "postgresql", "mysql", "sqlite", etc. as per your database
  url      = env("DATABASE_URL")
}

model Product {
  id                Int             @id @default(autoincrement())
  code              String          @unique
  description       String
  price             Float // Price of the product
  cost              Float // Cost of the product
  productCategoryId Int
  productCategory   ProductCategory @relation(fields: [productCategoryId], references: [id])
  createdAt         DateTime        @default(now()) // Timestamp when the product was created
  updatedAt         DateTime        @updatedAt // Timestamp when the product was last updated
}

model ProductCategory {
  id       Int       @id @default(autoincrement())
  code     String    @unique
  name     String?
  products Product[] // This will create a one-to-many relationship with the Product model
}
